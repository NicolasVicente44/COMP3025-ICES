<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingHorizontal="@dimen/px_10"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/ResultTextViewFontSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstRow"
        app:layout_constraintBottom_toTopOf="@id/thirdRow">

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/functionButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="clear"
            android:text="@string/clear"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/percentageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/functionButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="percent"
            android:text="@string/percent"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/backspaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/functionButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="backspace"
            android:text="@string/backspace"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/divisionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operatorButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="divide"
            android:text="@string/divide"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondRow">

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="7"
            android:text="@string/seven"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="8"
            android:text="@string/eight"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="9"
            android:text="@string/nine"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operatorButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="multiply"
            android:text="@string/multiply"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdRow"
        app:layout_constraintBottom_toTopOf="@id/fourthRow">

        <Button
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="4"
            android:text="@string/four"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="5"
            android:text="@string/five"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="6"
            android:text="@string/six"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/subtractionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operatorButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="subtract"
            android:text="@string/subtract"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourthRow">

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="1"
            android:text="@string/one"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="2"
            android:text="@string/two"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="3"
            android:text="@string/three"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/additionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operatorButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="add"
            android:text="@string/add"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sixthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthRow"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/plusMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/functionButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="+-"
            android:text="@string/plus_minus"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/numberButtonBackgroundColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="0"
            android:text="@string/zero"
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/functionButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="decimal"
            android:text="."
            android:textSize="@dimen/buttonIconSize" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:backgroundTint="@color/operatorButtonColor"
            android:fontFamily="@font/fa_solid_900"
            android:tag="equality"
            android:text="@string/equals"
            android:textSize="@dimen/buttonIconSize" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>